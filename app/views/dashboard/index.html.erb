<div class="min-h-screen bg-slate-50">
  <!-- Top nav -->
  <nav class="bg-white border-b border-slate-200 px-6 py-4 flex items-center justify-between">
    <h1 class="text-xl font-serif font-bold text-slate-800">
      Quis ut Deus<span class="text-amber-500">?</span>
    </h1>
    <div class="flex items-center gap-4">
      <span class="text-sm text-slate-500">
        <%= current_user.email %>
      </span>
      <%= button_to "Sign Out", destroy_user_session_path,
          method: :delete,
          class: "text-sm text-slate-400 hover:text-red-500 transition-colors" %>
    </div>
  </nav>

  <!-- Dashboard content -->
  <main class="max-w-4xl mx-auto px-6 py-10">
    <h2 class="text-2xl font-bold text-slate-800 mb-2">
      Good <%= time_greeting %>, <%= current_user.first_name || "friend" %>
    </h2>
    <p class="text-slate-500 mb-8">
      <%= Date.today.strftime("%A, %B %-d, %Y") %>
    </p>

    <!-- Placeholder cards for future features -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-xl border border-slate-200 p-6">
        <h3 class="font-semibold text-slate-700 mb-2">Today's Readings</h3>
        <p class="text-sm text-slate-400">Coming in Phase 2...</p>
      </div>

      <div class="bg-white rounded-xl border border-slate-200 p-6">
        <h3 class="font-semibold text-slate-700 mb-2">Prayer Tracker</h3>
        <p class="text-sm text-slate-400">Coming in Phase 3...</p>
      </div>

      <div class="bg-white rounded-xl border border-slate-200 p-6">
        <h3 class="font-semibold text-slate-700 mb-2">Journal</h3>
        <p class="text-sm text-slate-400">Coming in Phase 3...</p>
      </div>

      <div class="bg-white rounded-xl border border-slate-200 p-6">
        <h3 class="font-semibold text-slate-700 mb-2">Streaks & Progress</h3>
        <p class="text-sm text-slate-400">Coming in Phase 4...</p>
      </div>
    </div>
  </main>
</div>